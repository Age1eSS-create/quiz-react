{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@/*": ["./src/*"]
        },
      "lib": [
        "decorators",
        "dom",
        "es5",
        "scripthost",
        "es2015.promise"
      ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ]
}
